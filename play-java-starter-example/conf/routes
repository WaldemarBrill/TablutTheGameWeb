# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.TablutController.index
GET     /tablut                     controllers.TablutController.game
GET		/tablut/:command			controllers.TablutController.command(command:String)
GET     /help                       controllers.TablutController.help
GET     /controls                   controllers.TablutController.controls
GET		/websocket					controllers.TablutController.socket

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
